<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.1.xsd
      http://www.springframework.org/schema/mvc
      http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">
      
    <bean id="exceptionResolver" class="com.mcp.order.gateway.exception.ExceptionHandler"/>

	<!-- 启动注解驱动的Spring MVC功能，注册请求url和注解POJO类方法的映射-->
	<mvc:annotation-driven>
	    <mvc:argument-resolvers>
            <bean class="com.mcp.order.gateway.resolver.JsonHeadResolver"/>
            <bean class="com.mcp.order.gateway.resolver.McpUserResolver"/>
            <bean class="com.mcp.order.gateway.resolver.McpTypeUserResolver"/>
            <bean class="com.mcp.order.gateway.resolver.McpStationResolver"/>
            <bean class="com.mcp.order.gateway.resolver.JsonBodyResolver"/>
            <bean class="com.mcp.order.gateway.resolver.JsonTypeBodyResolver"/>
        </mvc:argument-resolvers>
	</mvc:annotation-driven>
	
	<!-- 这个不仅能对MVC进行配置 -->
	<context:annotation-config/>
	
	<context:component-scan base-package="com.mcp.order.gateway.control"/>
    
    <bean id="plainTextView" class="com.mcp.order.gateway.view.PlainTextView"/>
    
    <bean id="plainJsonView" class="com.mcp.order.gateway.view.PlainJsonView"/>

    <bean id="plainTypeJsonView" class="com.mcp.order.gateway.view.PlainTypeJsonView"/>
    
    <!-- 根据名称查找视图-->
    <bean class="org.springframework.web.servlet.view.BeanNameViewResolver">
        <property name="order" value="1"/>
    </bean>
    <!--todo 跟接口无关的配置需要删除-->
	<!-- 对模型视图名称的解析，在请求时模型视图名称添加前后缀 -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		p:prefix="/pages" p:suffix=".jsp">
	</bean>
	
	<!-- 拦截器mvc:mapping必须设置，不然图片等资源也会触发拦截器 -->  
    <mvc:interceptors>
    	<mvc:interceptor>
    		<mvc:mapping path="/pages/*"/>
    		<mvc:mapping path="/pages/login/*"/>
    		<mvc:mapping path="/pages/admin/*"/>
    		<bean class="com.mcp.order.gateway.interceptor.CommonInterceptor"/>
    	</mvc:interceptor>
    	<mvc:interceptor>
    		<mvc:mapping path="/account/*"/>
    		<mvc:mapping path="/print/*"/>
    		<mvc:mapping path="/query/*"/>
    		<mvc:mapping path="/trade/*"/>
    		<bean class="com.mcp.order.gateway.interceptor.JsonInterceptor"/>
    	</mvc:interceptor>
    </mvc:interceptors>
    
    <!-- 普通资源的访问 -->
    <mvc:default-servlet-handler/>
</beans>