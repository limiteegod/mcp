<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>/lib/</outputDirectory><!-- 将scope为runtime的依赖包打包到lib目录下。 -->
			<scope>runtime</scope>
			<excludes>
				<exclude>com.mcp:mcp-deploy-database</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
    <fileSets>
    	<fileSet>
            <directory>${project.build.outputDirectory}/config</directory>
            <outputDirectory>/config/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
            	<exclude>accountOperatorType.xml</exclude>
            	<exclude>applicationContext-jpa.xml</exclude>
            	<exclude>applicationContext-money.xml</exclude>
            	<exclude>applicationContext-service.xml</exclude>
            	<exclude>applicationContext.xml</exclude>
            	<exclude>channel.xml</exclude>
            	<exclude>cmd.xml</exclude>
            	<exclude>lotteryInfo.xml</exclude>
            	<exclude>datasource.properties</exclude>
            	<exclude>redis.properties</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>